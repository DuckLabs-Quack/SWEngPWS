<?xml version="1.0" encoding="UTF-8"?>
<schema
	version="1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
	<attributeGroup name="position">
		<attribute name="x" type="int" />
		<attribute name="y" type="int" />
		<attribute name="x2" type="int" />
		<attribute name="y2" type="int" />
	</attributeGroup>
	<attributeGroup name="fonts">
		<attribute name="font" type="string" />
		<attribute name="italic" type="boolean" />
		<attribute name="textsize" type="int" />
		<attribute name="underline" type="boolean" />
	</attributeGroup>
	<attributeGroup name="colors">
		<attribute name="color" type="string" />
		<attribute name="fill" type="string" />
	</attributeGroup>
	<attributeGroup name="transitions">
		<attribute name="duration" type="int" />
		<attribute name="start" type="string" />
	</attributeGroup>
	<element name="Presentation" minOccurs="1">
		<annotation>
			<documentation>
				The top-level element that contains the presentation.
			</documentation>
		</annotation>
		<complexType>
			<attributeGroup ref="fonts" />
			<attributeGroup ref="colors" />
			<sequence>
				<element name="Meta">
					<type>
						<attribute name="key" type="string" />
						<attribute name="value" type="string" />
					</type>
				</element>
				<element name="Slide">
					<complexType>
						<attributeGroup ref="fonts" />
						<attributeGroup ref="colors" />
						<attributeGroup ref="transitions" />
						<sequence>
							<element name="Text" mixed="true">
								<complexType>
									<attributeGroup ref="position" />
									<attributeGroup ref="fonts" />
									<attributeGroup ref="colors" />
									<attributeGroup ref="transitions" />
									<element name="Format">
										<complexType>
											<simpleContent>
												<attributeGroup ref="fonts" />
												<attributeGroup ref="colors" />
											</simpleContent>
										</complexType>
									</element>
								</complexType>
							</element>
							<element name="Shape">
								<complexType>
									<attributeGroup ref="position" />
									<attributeGroup ref="colors" />
									<attribute name="type" type="string" />
									<attribute name="stroke" type="int" />
								</complexType>
							</element>
							<element name="Image">
								<complexType>
									<attributeGroup ref="position" />
									<attribute name="path" type="string" />
								</complexType>
							</element>
							<element name="Audio">
								<complexType>
									<attributeGroup ref="position" />
									<attribute name="path" type="string" />
								</complexType>
							</element>
							<element name="Video">
								<complexType>
									<attributeGroup ref="position" />
									<attribute name="path" type="string" />
								</complexType>
							</element>
						</sequence>
					</complexType>
				</element>
			</sequence>
		</complexType>
	</element>
</schema>
